<view class="tab-bar">
  <view 
    wx:for="{{list}}" 
    wx:key="index" 
    class="tab-bar-item {{selected === index ? 'active' : ''}}" 
    bindtap="switchTab"
    data-index="{{index}}"
    data-path="{{item.pagePath}}"
  >
    <!-- 使用 t-icon 组件 -->
    <t-icon name="{{selected === index ? item.selectedIcon : item.icon}}"></t-icon>
    <text>{{item.text}}</text>
  </view>
</view>