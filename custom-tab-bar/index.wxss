.tab-bar {
    display: flex;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx; /* 高度可根据需要调整 */
    background-color: #fafafa;
    border-top: 1rpx solid #eee;
  }
  
  .tab-bar-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
  }
  
  .tab-bar-item.active {
    color: #07c160; /* 激活颜色，与app.json中配置的selectedColor一致 */
  }